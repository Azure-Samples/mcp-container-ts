{
	"servers": {
		"mcp-server-remote": {
			"type": "http",
			"url": "https://<env-name>.<container-id>.<region>.azurecontainerapps.io/mcp",
			"headers": {
				"Authorization": "Bearer ${input:mcp-server-token-remote}"
			}
		},
		"mcp-server": {
			"type": "http",
			"url": "http://localhost:3000/mcp",
			"headers": {
				"Authorization": "Bearer ${input:mcp-server-token}"
			}
		}
	},
	"inputs": [
		{
			"password": true,
			"id": "mcp-server-token",
			"description": "Enter the token for the MCP server",
			"type": "promptString"
		},
		{
			"password": true,
			"id": "mcp-server-token-remote",
			"description": "Enter the token for the MCP server (remote)",
			"type": "promptString"
		},
	]
}